  <query>
    <text>
      <![CDATA[
if dbo.Sthink$Function$CheckSQLInjection(@stt_rec) = 0 return
if @@form = '013' or @@form = '014' begin
  if exists(select 1 from e81$$partition$previous where stt_rec = @stt_rec) and exists (select 1 from options where name = 'm_xk_yn' and val = '1') begin
    exec rs_PrintSVTranMultiCopies @stt_rec, @@id, 'm81$$partition$current', 'd81$$partition$current', 'e81$$partition$current', @@language, @@userID, @@admin
    select 'SVTran_03_xk' as reportFile
  end else begin
    exec rs_PrintSVTranMultiCopies @stt_rec, @@id, 'm81$$partition$current', 'd81$$partition$current', '', @@language, @@userID, @@admin
  end
	return
end
]]>&GLTranReportSql;<![CDATA[
else begin
    declare @m_ma_nt0 varchar(10), @key varchar(128), @bilingual tinyint, @l char(1)
    select @m_ma_nt0 = val from options where name = N'm_ma_nt0'
    if @@form in ('620', '821', '822', '050', '051') select @bilingual = 1, @l = 'V' else select @bilingual = 0, @l = @@language 
    ]]>&ISTranSqlIf;<![CDATA[
    begin
        declare @tk_vt varchar(128), @h_line1 as nvarchar(128), @h_line2 as nvarchar(128), @h_line3 as nvarchar(128), @h_line4 as nvarchar(128)
        select @tk_vt = ''
        select @tk_vt = @tk_vt + rtrim(a.tk_vt) + ', ' from (select distinct tk_vt from d81$$partition$current where stt_rec = @stt_rec) a
        select @tk_vt = left(@tk_vt, len(@tk_vt) - 1)

        select @h_line1 = case when @@language = 'V' then cname else cname2 end from reports where ccode = 'DEC017'
        select @h_line2 = case when @@language = 'V' then cname else cname2 end from reports where ccode = 'DEC018'
        select @h_line3 = case when @@language = 'V' then cname else cname2 end from reports where ccode = 'DEC019'
        select @h_line4 = case when @@language = 'V' then cname else cname2 end from reports where ccode = 'DEC020'

        select case when a.ong_ba <> '' then a.ong_ba else case when @l = 'V' then b.ten_kh else b.ten_kh2 end end as ong_ba
            , case when a.ong_ba <> '' then a.ong_ba else b.ten_kh2 end as ong_ba2
            , e.dia_chi, b.dien_thoai, a.dien_giai, c.ma_kho, isnull(d.dia_chi,'') dia_diem, ltrim(a.so_ct) so_ct, a.t_tien, a.t_tien_nt
		        , dbo.Sthink$Function$System$ReadCurrency(@m_ma_nt0, a.t_tien, @l) as t_tien_in_word
		        , dbo.Sthink$Function$System$ReadCurrency(a.ma_nt, a.t_tien_nt, @l) as t_tien_nt_in_word
            , case when @bilingual = 1 then dbo.Sthink$Function$System$ReadCurrency(@m_ma_nt0, a.t_tien, 'E') else '' end t_tien_in_word2
            , case when @bilingual = 1 then dbo.Sthink$Function$System$ReadCurrency(a.ma_nt, a.t_tien_nt, 'E') else '' end t_tien_nt_in_word2
		        , replace(str(day(a.ngay_ct),2),' ','0') ngay, replace(str(month(a.ngay_ct),2),' ','0') thang, cast(year(a.ngay_ct) as char(4)) nam
            , @h_line1 as h_line1, @h_line2 as h_line2, @h_line3 as h_line3, @h_line4 as h_line4
            , @tk_vt as tk_co, a.tk as tk_no, isnull(f.so_ct_goc, 0) as so_ct_goc, isnull(f.dien_giai_ct_goc, '') as dien_giai_ct_goc, a.tk
	        from @@prime$partition$current a with(nolock)
		        left join dmkh b with(nolock) on a.ma_kh = b.ma_kh
		        left join d81$$partition$current c with(nolock) on (a.stt_rec = c.stt_rec and c.stt_rec0 = (select min(stt_rec0) from d81$$partition$current with(nolock) where stt_rec = a.stt_rec))
		        left join dmkho d with(nolock) on c.ma_kho = d.ma_kho
		        left join ctgt21 e with(nolock) on a.stt_rec = e.stt_rec
            left join v00$$partition$current f on a.stt_rec = f.stt_rec
	        where a.stt_rec = @stt_rec

        select @key = 'a.stt_rec = ''' + @stt_rec + ''''
        exec rs_PrintISTran @@language, @key, 'd81$$partition$current', @@id, @bilingual
    end else begin
		  if @@form = '010' or @@form = '020' or @@form = '011' or @@form = '021' or @@form = '022' or @@form = '026' or @@form = '110' or @@form = '120' or @@form = '012' or @@form = '015' or @@form = '555' begin
				  select a.ong_ba as doi_tac, a.ma_kh, e.ten_kh as ten_kh, e.ten_kh as ten_kh2, e.ma_so_thue, e.dia_chi, (b.tk_nh + ' ' + b.ngan_hang) as tk_nh, c.ten_ngan as thanh_toan, c.ten_ngan2 as thanh_toan2, 
					  case when @@language = 'V' then N'1: Lưu' else '1: Backup' end as so_lien, isnull(k.ky_hieu, '') ky_hieu, a.so_seri, a.so_ct, a.ngay_ct, a.ma_thue, cast(cast(d.thue_suat as int) as varchar)+'%' as thue_suat, 
					  a.ma_nt, a.t_tien2, a.t_tien_nt2, a.t_thue, a.t_thue_nt, a.t_tt, a.t_tt_nt, 
					  dbo.Sthink$Function$System$ReadCurrency(@m_ma_nt0, a.t_tt, @l) as t_tt_in_word, 
					  dbo.Sthink$Function$System$ReadCurrency(a.ma_nt, a.t_tt_nt, @l) as t_tt_nt_in_word,
					  replace(str(day(a.ngay_ct),2),' ','0') ngay, replace(str(month(a.ngay_ct),2),' ','0') thang, cast(year(a.ngay_ct) as char(4)) nam,
					  a.dien_giai, b.dien_thoai, a.ma_nvbh, l.ten_nvbh, a.tk
				  from @@prime$partition$current a with(nolock)
						  left join dmkh b with(nolock) on a.ma_kh = b.ma_kh left join dmtt c with(nolock) on a.ma_tt = c.ma_tt
						  left join dmthue d with(nolock) on a.ma_thue = d.ma_thue
						  left join ctgt21 e with(nolock) on a.stt_rec = e.stt_rec
						  left join v20dmnk k with(nolock) on a.ma_nk = k.ma_nk
						  left join dmnvbh l with(nolock) on a.ma_nvbh = l.ma_nvbh
						
				  where a.stt_rec = @stt_rec
			  end else begin
			  if @@form = '060' or @@form = '061' or @@form = '062' or @@form = '063' or @@form = '064' or @@form = '067' begin
			  declare @$keyss table (text ntext)
			  declare @ngay_ct1 datetime, @ma_dvcs nvarchar(8)
			  insert into @$keyss values(@stt_rec)
			  select * into #$keys from @$keyss
			  set @ngay_ct1 = (select ngay_ct from @@prime$partition$current where stt_rec = @stt_rec)
			  set @ma_dvcs = (select ma_dvcs from @@prime$partition$current where stt_rec = @stt_rec)
			  
			   exec rs_rptPrintSVTranExport @ngay_ct1, @ngay_ct1, @ma_dvcs, '', @bilingual, 3, 0, 'V', 1, 1
			   
			  end else begin
				  select a.ong_ba as doi_tac, a.ma_kh, e.ten_kh as ten_kh, e.ten_kh as ten_kh2, e.ma_so_thue, e.dia_chi, (rtrim(b.tk_nh) + ' ' + rtrim(b.ngan_hang)) as tk_nh, c.ten_ngan as thanh_toan, c.ten_ngan2 as thanh_toan2, 
					  case when @l = 'V' then N'1: Lưu' else N'1: Backup' end as so_lien, N'1: Backup' as so_lien2,
            isnull(k.ky_hieu, '') ky_hieu, a.so_seri, a.so_ct, a.ngay_ct, cast(cast(d.thue_suat as int) as varchar)+'%' as thue_suat, 
					  a.ma_nt, a.t_tien2, a.t_tien_nt2, a.t_thue, a.t_thue_nt, a.t_tt, a.t_tt_nt, 
					  dbo.Sthink$Function$System$ReadCurrency(@m_ma_nt0, a.t_tt, @l) as t_tt_in_word, 
					  dbo.Sthink$Function$System$ReadCurrency(a.ma_nt, a.t_tt_nt, @l) as t_tt_nt_in_word,
            case when @bilingual = 1 then dbo.Sthink$Function$System$ReadCurrency(@m_ma_nt0, a.t_tt, 'E') else '' end as t_tt_in_word2, 
					  case when @bilingual = 1 then dbo.Sthink$Function$System$ReadCurrency(a.ma_nt, a.t_tt_nt, 'E') else '' end as t_tt_nt_in_word2,
					  replace(str(day(a.ngay_ct),2),' ','0') ngay, replace(str(month(a.ngay_ct),2),' ','0') thang, cast(year(a.ngay_ct) as char(4)) nam,
					  a.dien_giai, 0 as fix_yn, b.dien_thoai, a.ma_nvbh, l.ten_nvbh, a.tk
				  from @@prime$partition$current a with(nolock)
						  left join dmkh b with(nolock) on a.ma_kh = b.ma_kh left join dmtt c with(nolock) on a.ma_tt = c.ma_tt
						  left join dmthue d with(nolock) on a.ma_thue = d.ma_thue
						  left join ctgt21 e with(nolock) on a.stt_rec = e.stt_rec
						  left join v20dmnk k with(nolock) on a.ma_nk = k.ma_nk
						  left join dmnvbh l with(nolock) on a.ma_nvbh = l.ma_nvbh
				  where a.stt_rec = @stt_rec
			  end
		end
        select @key = 'a.stt_rec = ''' + @stt_rec + ''''
		If @@form = '016' begin
        exec zcrs_PrintSVTran @@language, @key, 'd81$$partition$current', @@id, @bilingual
		end else begin 
				
		If (@@form = '023' or @@form = '024') begin
        exec rs_PrintSVTran_locthinh @@language, @key, 'd81$$partition$current', @@id, @bilingual
		end else begin 
		exec rs_PrintSVTran @@language, @key, 'd81$$partition$current', @@id, @bilingual
		Declare @no_cu numeric(16,2) = 0, @Datetime0 AS datetime,@Date AS SMALLDATETIME, @Unit VARCHAR(1023),@Customer VARCHAR(33)
		select @Datetime0 = datetime0, @Date = ngay_ct, @Unit = ma_dvcs, @Customer = ma_kh, @no_cu = 0 from m81$$partition$current where stt_rec = @stt_rec
	    exec rs_rptDCCustomer_hda @Datetime0, @Date, @Date, @Unit, N'131', @Customer, 'V', 0, 0, 1, 1, 1
		Set @no_cu = (select isnull(s6,0) from zcdmkh where ma_dvcs = @Unit and ma_kh = @Customer)
		If (@@form = '012') begin
		select t_tt as t_tt, t_tt_nt as t_tt_nt,t_thu as t_thu,t_thu_nt as t_thu_nt, @no_cu as no_cu, t_tt - t_thue + @no_cu - t_thu as con_lai, dbo.Sthink$Function$System$ReadCurrency(@m_ma_nt0, t_tt - t_thue + @no_cu - t_thu, @l) as word_con_lai
		from m81$$partition$current  where stt_rec = @stt_rec
		end else begin 
		select t_tt as t_tt, t_tt_nt as t_tt_nt,t_thu as t_thu,t_thu_nt as t_thu_nt, @no_cu as no_cu, t_tt + @no_cu - t_thu as con_lai, dbo.Sthink$Function$System$ReadCurrency(@m_ma_nt0, t_tt + @no_cu - t_thu, @l) as word_con_lai, dbo.Sthink$Function$System$ReadCurrency(@m_ma_nt0, t_thu, @l) as word_t_thu, dbo.Sthink$Function$System$ReadCurrency(@m_ma_nt0, t_tien2, @l) as word_t_tien2
		from m81$$partition$current  where stt_rec = @stt_rec
		end
		end
		end
    end
end
		]]>
    </text>
  </query>

